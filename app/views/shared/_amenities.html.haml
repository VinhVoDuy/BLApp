%section.usp.mt50.hidden-xs.hidden-sm
  .container
    .row
      .col-sm-12
        %h2.lined-heading
          %span Amenities
      .col-sm-2.bounceIn.appear.animated{"data-start" => "0"}
        %a{href: '/amenities'}
          .box-icon
            .circle
              %i.fa.fa-cutlery.fa-large.fa-2x
            %p Breakfast Included
      .col-sm-2.bounceIn.appear.animated{"data-start" => "400"}
        %a{href: '/amenities'}
          .box-icon
            .circle
              %i.fa.fa-credit-card.fa-lg.fa-2x
            %p Available 24/7
      .col-sm-2.bounceIn.appear.animated{"data-start" => "800"}
        %a{href: '/amenities'}
          .box-icon
            .circle
              %i.fa.fa-bus.fa-lg.fa-2x
            %p Transportation service
      .col-sm-2.bounceIn.appear.animated{"data-start" => "1200"}
        %a{href: '/amenities'}
          .box-icon
            .circle
              %i.fa.fa-car.fa-lg.fa-2x
            %p Public parking is available
      .col-sm-2.bounceIn.appear.animated{"data-start" => "1200"}
        %a{href: '/amenities'}
          .box-icon
            .circle
              %i.fa.fa-wifi.fa-lg.fa-2x
            %p Wifi is available in all areas
      .col-sm-2.bounceIn.appear.animated{"data-start" => "1200"}
        %a{href: '/amenities'}
          .box-icon
            .circle
              %i.fa.fa-briefcase.fa-lg.fa-2x
            %p Business center
