.boxed
  = render 'shared/header'
.container.overlay
  .row.overlay.grad
    .color-overlay
      %ol.breadcrumb
        %li
          = link_to 'Home', root_path
        %li.active 
          %strong Accomodations
  %section.rooms.mt50
    .container
      = RoomType.all.each_slice(3).each do |room_type_list|
        .row.rooms-row
          - room_type_list.each do |room_type|
            = render 'rooms/room', room_type: room_type, quantity: 1
= render 'shared/footer'
