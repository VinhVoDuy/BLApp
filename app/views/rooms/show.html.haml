.boxed
  = render 'shared/header'
.container
  .row.overlay
    .color-overlay
      / Page title
      .container
        .row
          .col-sm-12
            %ol.breadcrumb
              %li
                = link_to 'Home', root_path
              %li
                = link_to 'Rooms', rooms_path
              %li.active= @room.name
            %h1.white-color= @room.name
  %br
  %br
  .row
    / Slider
    %section.standard-slider.room-slider
      .col-sm-12.col-md-8
        #owl-standard.owl-carousel
          - @room.room_images.map do |room_image|
            .item
              %a{"data-rel" => "prettyPhoto[gallery1]", :href => room_image.image.url(:medium)}
                %img.img-responsive.center-image{:alt => @room.name || 'Image', :src => room_image.image.url(:medium)}/
    / Reservation form
    %section#reservation-form.mt50.clearfix
      .col-sm-12.col-md-4
        #reservationform.reservation-vertical.clearfix
          %h2.lined-heading
            %span Room Detail
          .price
            %h4 Area
            %span #{@room.size} mÂ²
          .price
            %h4 Bed Type
            %span= @room.bed_type
          .price
            %h4 Room Capacity
            %span= @room.capacity
          .price
            %h4 Price
            \$ #{price_formatter(@room.price)}
            %span= @room.dormitory? ? 'per person' : 'per night'
          %button.btn.btn-primary.btn-block#book-btn{:type => "submit", onClick: 'HotelRunnerWidget.show(null);'} Book Now
    / Room Content
    %section
      .container
        .row
          .col-sm-7.mt50
            %h2.lined-heading
              %span Enjoy Your Room
            %p.mt50= @room.description.html_safe
          .col-sm-5.mt50
            %h2.lined-heading
              %span Room Facilities
            %table.table.table-striped.mt30
              %tbody
                - @room.features.each_slice(3).each do |arr_feature|
                  %tr
                    -arr_feature.each do |feature|
                      %td
                        %i.fa.fa-check-circle
                        = feature
/ Other Rooms
= render 'shared/rooms', rooms: RoomType.where.not(id: @room.id), title: 'Other Rooms'

= render 'shared/footer'
:javascript
  jQuery(document).on('turbolinks:load', function () {
    if (jQuery().owlCarousel) {
      jQuery("#owl-standard").owlCarousel({
          navigation: true,
          // Show next and prev buttons
          autoplay: 2000,
          slideSpeed: 300,
          paginationSpeed: 400,
          singleItem: true,
          pagination: false,
          navigationText: ['<i class="fa fa-angle-left fa-3x"></i>', '<i class="fa fa-angle-right fa-3x"></i>'],
          responsive: true,
          responsiveRefreshRate: 200,
          responsiveBaseWidth: window,
          // "singleItem:true" is a shortcut for:
          // items : 1, 
          // itemsDesktop : false,
          // itemsDesktopSmall : false,
          // itemsTablet: false,
          // itemsMobile : false
      });
      }
  });
