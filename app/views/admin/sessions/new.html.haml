.container
  %h1.text-center Admin Login
  = render 'shared/flash'
  = form_for(@user, url: admin_sessions_path) do |f|
    .field
      = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'
    %br
    .field
      = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control'
    %br
    .actions
      = f.submit "Log in", class: 'btn btn-success social-btn'
