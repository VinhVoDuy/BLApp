%h1.text-center Admin Promotions
.container
  = render 'shared/flash'
  = form_for [:admin, @promotion] do |f|
    = f.hidden_field :id
    .form-group
      = f.label :image, class: 'control-label'
      = link_to image_tag(f.object.image.url(:medium)), f.object.image.url(:original) if f.object.image?
      = f.file_field :image
    .form-group
      = f.label :name, class: 'control-label'
      = f.text_field :name, class: 'form-control'
    .form-group
      = f.label :percentage_off, class: 'control-label'
      = f.text_field :percentage_off, class: 'form-control'
    .form-group
      = f.label :amount_off, class: 'control-label'
      = f.text_field :amount_off, class: 'form-control'
    .form-group
      = f.label :code, class: 'control-label'
      = f.text_field :code, class: 'form-control'
    .form-group
      = f.label :start_time, class: 'control-label'
      = f.text_field :start_time, class: 'form-control date-picker'
    .form-group
      = f.label :end_time, class: 'control-label'
      = f.text_field :end_time, class: 'form-control date-picker'
    .form-group
      = f.label :published, class: 'control-label'
      = f.check_box :published
    .form-group
      = f.label :description, class: 'control-label'
      = f.text_area :description, class: 'form-control'
    = f.submit class: 'btn btn-primary'
:javascript
  $('.date-picker').datepicker({format: 'yyyy-mm-dd'});
