%h1.text-center Admin Landing Images
.container
  = render 'shared/flash'
  = form_for [:admin, @landing_image] do |f|
    = f.hidden_field :id
    .form-group
      = f.label :image, class: 'control-label'
      = link_to image_tag(f.object.image.url(:medium)), f.object.image.url(:original) if f.object.image?
      = f.file_field :image
    .form-group
      = f.label :heading, class: 'control-label'
      = f.text_field :heading, class: 'form-control'
    .form-group
      = f.label :description, class: 'control-label'
      = f.text_field :description, class: 'form-control'
    .form-group
      = f.label :url, class: 'control-label'
      = f.text_field :url, class: 'form-control'
    = f.submit class: 'btn btn-primary'
